<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".ui.login.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="25dp"
            android:src="@drawable/splace_logo" />

        <TextView
            android:id="@+id/txtEnterDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Enter your registered moblie number and email address below:"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etmoblieNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_background"
            android:hint="Moblie Number(10 digits)"
            android:drawableStart="@drawable/ic_baseline_phone_android_24"
            android:inputType="number"
            android:padding="9dp" />


        <EditText
            android:id="@+id/etEmial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/custom_background"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:hint="Email Address"
            android:inputType="text"
            android:padding="9dp" />
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/dark_orange"
            android:padding="10dp"
            android:text="Next" />

    </LinearLayout>

</RelativeLayout>